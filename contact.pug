extends ./layout/_admin.pug

block content
  
  .admin-wrap
    .container.is-fluid.--contact
      .columns
        .column.is-8.is-offset-2
          .card
            header.--contact
              .columns
                .column
                  p
                    | Contact [agent name]
                  //- p
                  p.is-size-7
                    | 214/14-16 Lexington Drive
                    br
                    | BELLA VISTA NSW 2153
                    br
                    | Phone: (02) 9086 9123
                    br
                    a.has-text-white(href='mailto:mail@norweststrata.com.au') mail@norweststrata.com.au
                  //- p
                //- column
              //- columns
            //- header
            .message-body
              .columns
                .column
                  .field
                    label.label Name
                    .control
                      input.input(type="text", placeholder="")
                    //- control
                  //- field
                  .field
                    label.label Email
                    .control.has-icons-left.has-icons-right
                      input.input(type="email", placeholder="Email input", value="youremail@")
                      span.icon.is-small.is-left
                        i.fas.fa-envelope
                      //- span
                      //- VALIDATION ICON
                        span.icon.is-small.is-right
                          i.fas.fa-exclamation-triangle
                        //- span
                    //- control
                    //- VALIDATION MESSAGE
                      p.help.is-danger This email is invalid
                  //- field
                  .field
                    label.label Mobile Number
                    .control
                      input.input(type="text", placeholder="")
                    //- control
                  //- field
                  .field
                    label.label Related to Property
                    .control
                      .select
                        select
                          option Select dropdown
                          option With options
                        //- select
                      //- select
                    //- control
                  //- field
                  .field
                    label.label Contact Reason
                    .control
                      .select
                        select
                          option Question
                          option With options
                        //- select
                      //- select
                    //- control
                  //- field
                  .field
                    label.label Message
                    .control
                      textarea.textarea(placeholder="")
                    //- control
                  //- field
                  .field.has-text-right
                    a.button.is-danger(href='') Send
                  //- field
                //- column
              //- columns
            //- message-body
          //- card
        //- column
      //- columns
    //- container
  //- section

block scripts
  script.
    
